---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialItem from "../components/SocialItem.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import SectionBox from "../components/SectionBox.astro";
---

<Layout
	title="Portafolio de Andrés Quintana - Desarrollador y Programador FrontEnd"
	description="Portafolio Web de Andrés Quintana. Desarrollador y Programador FrontEnd">
	<main>
		<SectionBox class="py-36">
			<img
				class="rounded-full size-20 mb-4"
				src="https://static-cdn.jtvnw.net/jtv_user_pictures/b0be7af0-99a0-4e39-b248-d3f596946437-profile_image-300x300.png"
				alt="Profile Photo"
			/>
			<h1 class="text-white text-5xl font-bold flex-row flex gap-x-4 pb-10">
				Hey, soy Andrés Quintana
				<a
					href="https://www.linkedin.com/in/andr%C3%A9s-quintana-b205592b4/"
					target="_blank"
					rel="noopener noreferrer"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-2xl opacity-80 text-wrap">
				<span class="text-yellow-200">Estudiante de Ingeniería de Sistemas y Desarrollador Web</span> 
				enfocado en el desarrollo FrontEnd. 
				<span class="text-red-400">De Cartagena, Colombia</span>.
				<span class="opacity-75">En proceso de aprendizaje y perfeccionamiento de nuevas tecnologías.</span>
			</h2>
			<nav class="flex gap-x-3 mt-5">
				<SocialItem href="https://www.linkedin.com/in/andr%C3%A9s-quintana-b205592b4/">
					<LinkedInIcon class="size-7" />
				</SocialItem>
				<SocialItem href="https://github.com/AndrxsQ">
					<GitHubIcon class="size-7" />
				</SocialItem>
				<SocialItem href="mailto:andresquintana2004@gmail.com">
					<MailIcon class="size-7" />
				</SocialItem>
			</nav>
		</SectionBox>
	</main>
</Layout>
